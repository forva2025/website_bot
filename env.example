# Deepseek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=*

# Knowledge Base Configuration
KNOWLEDGE_BASE_AUTO_UPDATE=true
KNOWLEDGE_BASE_UPDATE_INTERTERVAL_HOURS=6
KNOWLEDGE_BASE_MAX_CONCURRENT_REQUESTS=5
KNOWLEDGE_BASE_REQUEST_DELAY_MS=1000

# Website Scraping Configuration
WEBSITE_SCRAPING_ENABLED=true
WEBSITE_SCRAPING_MAX_PAGES=100
WEBSITE_SCRAPING_TIMEOUT_MS=10000

# PDF Processing Configuration
PDF_MAX_FILE_SIZE_MB=50
PDF_PROCESSING_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=server.log

# Security
SECURITY_HEADERS_ENABLED=true
SECURE_COOKIES=false

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false 